{
    "name": "project-analyzer",
    "displayName": "Project Analyzer",
    "description": "Analyzes project structure and calculates time spent.",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.85.0"
    },
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "extension.analyzeProject",
                "title": "Analyze Project"
            },
            {
                "command": "extension.startTimer",
                "title": "Start Timer"
            },
            {
                "command": "extension.submitTimeAndAnalyze",
                "title": "Submit and Analyze"
            }
        ],
        "statusBar": [
            {
                "command": "extension.startTimer",
                "name": "Start Timer",
                "text": "$(clock) Start Timer",
                "tooltip": "Start the timer to track your project time",
                "alignment": "left"
            },
            {
                "command": "extension.submitTimeAndAnalyze",
                "name": "Submit and Analyze",
                "text": "$(check) Submit",
                "tooltip": "Submit time and analyze project",
                "alignment": "left"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p .",
        "watch": "tsc -w .",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/mocha": "^10.0.3",
        "@types/node": "^22.15.2",
        "@types/vscode": "^1.85.0",
        "@typescript-eslint/eslint-plugin": "^6.21.0",
        "@typescript-eslint/parser": "^6.21.0",
        "eslint": "^8.56.0",
        "ignore": "^5.2.4",
        "mocha": "^10.2.0",
        "typescript": "^5.3.3",
        "vscode-test": "^1.5.0"
    },
    "dependencies": {
        "@google/generative-ai": "^0.24.0"
    }
}
